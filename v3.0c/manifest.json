{
  "manifest_version": 3,

  "name": "JerkMuter",
  "description": "A configurable ignore feature for the forum at gog.com",
  "version": "3.0.1",

  "content_scripts": [{
    "js": ["jerkmuter.js"],
    "matches": ["https://www.gog.com/forum/*"]
  }],
  "permissions": ["storage"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "jmoptions.html",
    "default_icon": "icon128.png"
  }
}
