{
  "manifest_version": 3,

  "name": "JerkMuter",
  "description": "A configurable ignore feature for the forum at gog.com",
  "version": "3.0.5",
  "browser_specific_settings": {
    "gecko": {
      "id": "{b5a85f9d-1054-445d-8896-1d65aad3a7e3}",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [{
    "js": ["defaults.js", "jerkmuter.js"],
    "matches": ["https://www.gog.com/forum/*"]
  }],
  "permissions": ["storage", "tabs"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "jmoptions.html",
    "default_icon": "icon128.png"
  }
}
